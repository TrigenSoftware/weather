{
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"testRegex": "/test/.*\\.spec\\.ts$",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"moduleNameMapper": {
		"~(.*)$": "<rootDir>/src/App/$1"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.{ts,tsx}",
		"!**/*.d.ts",
		"!**/node_modules/**"
	],
	"coverageReporters": [
		"lcovonly",
		"text"
	],
	"globals": {
		"ts-jest": {
			"babelConfig": {
				"presets": [
					["babel-preset-trigen", {
						"targets": { "node": "current" },
						"commonjs": true,
						"react": true
					}]
				]
			}
		}
	}
}
